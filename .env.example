# -------------------------------------------------
# DJANGO SETTINGS
# -------------------------------------------------
DJANGO_DEBUG=1
DJANGO_SECRET_KEY=change_me_to_a_long_random_secret_key
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# The WSGI module for your Django project
DJANGO_WSGI_MODULE=config.wsgi

# -------------------------------------------------
# DATABASE SETTINGS (PostgreSQL)
# -------------------------------------------------
POSTGRES_DB=django_db
POSTGRES_USER=django_user
POSTGRES_PASSWORD=django_password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Django DATABASE_URL
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# -------------------------------------------------
# GUNICORN (used in the Dockerfile CMD)
# -------------------------------------------------
GUNICORN_WORKERS=3
GUNICORN_TIMEOUT=60

# -------------------------------------------------
# STATIC & MEDIA
# -------------------------------------------------
DJANGO_STATIC_ROOT=/app/staticfiles
DJANGO_MEDIA_ROOT=/app/media

# -------------------------------------------------
# TIMEZONE / LOCALE
# -------------------------------------------------
TZ=UTC
LANG=en_US.UTF-8
LC_ALL=en_US.UTF-8

# -------------------------------------------------
# REDIS
# -------------------------------------------------
REDIS_PASSWORD=please_change_me_strong

# -------------------------------------------------
# CELERY
# -------------------------------------------------
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@redis:6379/0

# -------------------------------------------------
# AI (OpenRouter) â€” optional. Leave unset to disable LLM mode.
# -------------------------------------------------
OPENROUTER_API_KEY=
OPENROUTER_MODEL=deepseek/deepseek-r1:free